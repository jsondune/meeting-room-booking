# Meeting Room Booking System - MySQL 8.0 Configuration
# Optimized for high-concurrency booking system

[mysqld]
# Basic settings
user = mysql
port = 3306
bind-address = 0.0.0.0
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid
datadir = /var/lib/mysql
default-storage-engine = InnoDB
skip-name-resolve
skip-external-locking

# Character set and collation (Thai-friendly)
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
character-set-client-handshake = FALSE
init_connect = 'SET NAMES utf8mb4 COLLATE utf8mb4_unicode_ci'

# Connection settings
max_connections = 300
max_connect_errors = 1000000
wait_timeout = 600
interactive_timeout = 600
connect_timeout = 30
net_read_timeout = 60
net_write_timeout = 120

# Thread handling
thread_stack = 256K
thread_cache_size = 64

# Memory settings
# Adjust based on available RAM (assuming 4GB server)
innodb_buffer_pool_size = 1G
innodb_buffer_pool_instances = 4
innodb_log_buffer_size = 64M
key_buffer_size = 32M
tmp_table_size = 128M
max_heap_table_size = 128M
join_buffer_size = 4M
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
bulk_insert_buffer_size = 32M

# Query cache (deprecated in MySQL 8.0, use application-level caching)
# query_cache_type = 0
# query_cache_size = 0

# InnoDB settings
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_log_file_size = 256M
innodb_log_files_in_group = 2
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_lock_wait_timeout = 120
innodb_thread_concurrency = 0
innodb_autoinc_lock_mode = 2
innodb_adaptive_hash_index = ON
innodb_change_buffering = all
innodb_change_buffer_max_size = 25
innodb_stats_on_metadata = 0
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_redo_log_capacity = 512M

# Binary logging (for replication/backup)
server-id = 1
log_bin = mysql-bin
binlog_format = ROW
binlog_row_image = MINIMAL
max_binlog_size = 256M
expire_logs_days = 7
sync_binlog = 0
binlog_cache_size = 4M

# Slow query log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1
log_throttle_queries_not_using_indexes = 10
min_examined_row_limit = 1000

# Error log
log_error = /var/log/mysql/error.log
log_error_verbosity = 2

# General log (disable in production)
# general_log = 0
# general_log_file = /var/log/mysql/general.log

# Table handling
table_open_cache = 4000
table_definition_cache = 2000
open_files_limit = 65535

# Temp files
tmpdir = /tmp

# Security
local_infile = 0
symbolic-links = 0
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Performance schema (useful for debugging)
performance_schema = ON
performance_schema_instrument = 'statement/%=ON'
performance_schema_consumer_statements_digest = ON
performance_schema_consumer_thread_instrumentation = ON

# MySQL 8.0 specific
default_authentication_plugin = mysql_native_password
mysqlx = 0

[mysqldump]
quick
quote-names
max_allowed_packet = 64M
single-transaction
routines
triggers
events

[mysql]
auto-rehash
default-character-set = utf8mb4

[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4
